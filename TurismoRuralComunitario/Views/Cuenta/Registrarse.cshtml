@model TurismoRuralComunitario.Models.Usuario
@using TurismoRuralComunitario.Helpers

@{
    ViewBag.Title = "Registrarse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-5 mt-5 mb-5">
    <div class="form-group row justify-content-center">
        <div class="@TempData[Constantes.ALERT] alert-dismissible fade show" role="alert">
            <strong>@TempData[Constantes.MESSAGE]</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-lg-6">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <h4 class="text-center mb-sm-5 mb-3 text-dark">Registro</h4>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-row justify-content-lg-start ml-3">
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12 input-group mb-4">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fa fa-user"></i>
                                </div>
                            </div>
                            @Html.TextBoxFor(model => model.Nombre, new { @placeholder = "Nombre completo", @class = "form-control" })
                        </div>


                        <div class="form-row justify-content-lg-start ml-3">
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12 input-group mb-4">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </div>
                            </div>
                            @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @class = "form-control", @type = "email" })
                        </div>

                        <div class="form-row justify-content-lg-start ml-3">
                            @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12 input-group mb-4">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fa fa-address-card"></i>
                                </div>
                            </div>
                            @Html.TextBoxFor(model => model.Cedula, new { @placeholder = "Cédula", @class = "form-control" })
                        </div>

                        <div class="form-row justify-content-lg-start ml-3">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-auto input-group mb-4">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fa fa-key"></i>
                                </div>
                            </div>
                            @Html.PasswordFor(model => model.Password, new { @placeholder = "Contraseña", @class = "form-control" })
                        </div>
                        <div class=" form-group text-center col-lg-12 mb-4">
                            <button type="submit" class="btn btn-info btn-block"><strong>Registrarse</strong><i class="fas fa-hand-point-right ml-2"></i></button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

