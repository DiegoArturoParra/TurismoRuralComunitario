
@model TurismoRuralComunitario.Request.ChangePasswordRequest
@{
    ViewBag.Title = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-5 mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="form-group col-lg-5">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <h4 class="text-center mb-sm-5 mb-4 text-dark">Cambiar Contraseña</h4>
                    @using (Html.BeginForm("ChangePassword", "Cuenta", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-row justify-content-lg-start ml-3">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12 input-group mb-4">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-key"></i>
                                </div>
                            </div>
                            @Html.PasswordFor(model => model.Password, new { @placeholder = "contraseña", @class = "form-control" })
                        </div>
                        <div class="form-row justify-content-lg-start ml-3">
                            @Html.ValidationMessageFor(model => model.ConfirmarPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12 input-group mb-4">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-key"></i>
                                </div>
                            </div>
                            @Html.PasswordFor(model => model.ConfirmarPassword, new { @placeholder = "confirmar contraseña", @class = "form-control" })
                        </div>
                        <div class=" form-group text-center col-lg-12 mb-4">
                            <button type="submit" class="btn btn-secondary btn-block"><strong>Cambiar Contraseña</strong><i class="fas fa-share-square ml-3"></i></button>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

