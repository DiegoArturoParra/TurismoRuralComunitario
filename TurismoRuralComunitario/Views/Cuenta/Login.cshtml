
@model TurismoRuralComunitario.Request.LoginRequest

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container py-5 mt-5 mb-5">
    <div class="form-group row justify-content-center">
        <div class="@TempData["alerta"] alert-dismissible fade show" role="alert">
            <strong>@TempData["mensaje"]</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-lg-5">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <h4 class="text-center mb-sm-5 mb-4 text-dark">Login</h4>
                    @using (Html.BeginForm("Login", "Cuenta", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-row justify-content-lg-start ml-3">
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12 input-group mb-4">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </div>
                            </div>
                            @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @class = "form-control", @type = "email" })
                        </div>
                        <div class="form-row justify-content-lg-start ml-3">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-auto input-group mb-4">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fa fa-key"></i>
                                </div>
                            </div>
                            @Html.PasswordFor(model => model.Password, new { @placeholder = "Contraseña", @class = "form-control" })
                        </div>

                        <div class=" form-group text-center col-lg-12 mb-4">
                            <button type="submit" class="btn btn-secondary btn-block"><i class="fas fa-sign-in-alt mr-2"></i><strong>Iniciar sesión</strong></button>
                        </div>
                        <div class="form-row justify-content-start ml-1">
                            <h6 class="btn btn-link">@Html.ActionLink("¿Olvidaste tu contraseña?", "RecuperarPassword")</h6>
                        </div>
                        <hr />
                        <div class="row justify-content-center mb-2 mt-4">
                            <h6 class="text-black-50 font-italic font-weight-bold">¿No tienes cuenta aún?</h6>
                        </div>
                        <div class="row justify-content-center mt-4">
                            <a class="btn btn-link text-black-50 font-weight-bold" href="@Url.Action("Registrarse")">Crea Tu Cuenta</a>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
